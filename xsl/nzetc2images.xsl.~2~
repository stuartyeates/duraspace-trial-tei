<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:tei="http://www.tei-c.org/ns/1.0">
  
<xsl:variable name="doc" select="/tei:TEI/@xml:id"/>

  
  <!-- only extract the urls of graphics -->
  <xsl:template match="/" >
      <xsl:apply-templates select="//tei:graphic/@url"/>
  </xsl:template>



  <!-- XSLT Template to copy anything, priority="-1" -->
  <xsl:template match="tei:graphic/@url" >
    <xsl:text>/etexts/</xsl:text>
    <xsl:value-of select="$doc"/>
    <xsl:text>/JCB-041a(w100).jpg</xsl:text>
    <xsl:value-of select="."/>
    <xsl:text>
    </xsl:text>
  </xsl:template>

</xsl:stylesheet>

